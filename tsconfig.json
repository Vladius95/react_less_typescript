{
    "compilerOptions": {
      "module": "es6",
      "target": "es2018",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "sourceMap": false,
      "jsx": "react",
      "outDir": "./ts-build",
      "baseUrl": "ts",
      "experimentalDecorators": true,
      "allowJs": true,
      "lib": ["es2018", "dom"]
    },
    "types": [
      "node"
    ],
    "exclude": [
      "node_modules"
    ]
}
